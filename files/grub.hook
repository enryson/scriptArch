[Trigger]
Operation = Install
Operation = Upgrade
Operation = Remove
Type = File
Target = usr/lib/modules/*/vmlinuz

[Action]
Description = Updating GRUB Config and cleaning loading messages
Depends = grub
When = PostTransaction
Exec = /bin/sh -c '/usr/bin/grub-mkconfig -o /boot/grub/grub.cfg && /usr/local/bin/grub-remove-loading-msg.sh'
